<!doctype html>
<html>

<head>
  <title>:33</title>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/normalize.css">
  <link href='https://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/css/home.css" type="text/css">
  <style>
  .map--area {
    background: #e5e3df;
  }
  </style>
</head>

<body>
  <div class="page--wrapper full--height pos--rel" style="">
    <div class="main--container full--height">
      <div class="main--nav full--height center--content">
        <div class="filters--container">
          <span class="control--header">OurPlaces</span>
          <ul id="filterContainer" class="filter--ctrls">
            <li class="filter--header">Filters</li>
            <li class="filter--ctrl">
              <button id="filterMyPlaces" class="filter--btn">My Places</button>
            </li>
            <li class="filter--ctrl">
              <button id="filterFriendPlaces" class="filter--btn">Everyones Places</button>
            </li>
          </ul>
        </div>
        <button id="showFriends" class="friend--show--btn">
          <span class="friend--show--txt">My Friends</span>
        </button>
        <div class="account--container">
          <b>{{user.firstName}}</b>
          <hr>
          <span id="username">{{user.username}}</span>
          <div class="mail--container">
            <div id="openMail" class="mail--notification">
              {{#if user.requestCount}}
              <div class="mail--img active">&nbsp;</div> {{else}}
              <div class="mail--img inactive">&nbsp;</div> {{/if}}
            </div>
          </div>
        </div>
        <button class="logout--btn">Logout</button>
      </div>
      <div class="map--area">
        <div class="friend--overlay hide">
          <div class="friend--header">
            <h3 class="friend--filter--header">Add Someone!</h3>
            <input id="friendFilterInput" class="friend--filter" type="text" placeholder="Search For Ur m8s" selected>
            <button id="addFriendSubmit" class="add--btn">+</button><hr />
            <span id="requestStatus" class="error--text pink"></span>
          </div>
          <div class="friend--body">
            <ul id="friendList" class="friend--list">
              {{#if user.friendCount}} {{#each user.friends}}
              <li class="friend--item">
                <img class="friend--pic" src="//d.thumbs.redditmedia.com/gaEfD4wv-quK4LR9.png">
                <span class="friend--name"><b>{{this.username}}</b> | {{this.firstName}} {{this.lastName}}</span>
                <span class="friend--save--count">Saved {{this.placeCount}} Places.</span>
                <button class="friend--remove" friend_id="{{this.userId}}">X</button>
              </li>
              {{/each}}
<li class="friend--item empty hide">
                <span class="friend--name empty">no friends yet :(</span>
              </li>
              {{else}}
              <li class="friend--item empty">
                <span class="friend--name empty">no friends yet :(</span>
              </li>
              {{/if}}
            </ul>
          </div>
        </div>
        <div class="controls--container">
          <div class="search--container">
            <input id="placeSearchInput" class="search--input" type="text" name="placeSearchString" placeholder="Search, e.g. 'Sodosopah'">
            <ul id="predictiveContainer" class="predictive--results">
              <li class="prefetch--load--img hide">
                <div class='uil-ring-css'>
                  <div></div>
                </div>
              </li>
            </ul>
          </div>
          <button id="placesSearchSubmit" class="search--btn">SEARCH</button>
        </div>
        <ul id="notifications" class="mail--items hide">
          {{#if user.requestCount}} {{#each user.friendRequests}}
          <li request_id="{{this.userId}}"><span class="mail--name" title="{{this.firstName}} {{this.lastName}}">{{this.firstName}} {{this.lastName}}</span>
            <div friend_id="{{this.userId}}" class="mail--actions">
              <button class="mail--btn accept">âœ“</button>
              <button class="mail--btn reject">X</button>
            </div>
          </li>
          {{/each}}
          <li class="friend--request empty hide"><span>No Requests : /</span> {{else}}
            <li class="friend--request empty"><span>No Requests : /</span> 
            {{/if}}
              <li id="closeMail">
                <button>Close</button>
              </li>
        </ul>
        <div id="map" class="map">
        </div>
      </div>
    </div>
  </div>
  <div style="display: none;">
    <div id="friendTemplate">
      <li class="friend--item">
        <img class="friend--pic" src="//d.thumbs.redditmedia.com/gaEfD4wv-quK4LR9.png">
        <span class="friend--name"><b>%%USERNAME%%</b> | %%FNAME%% %%LNAME%%</span>
        <span class="friend--save--count">Saved %%PLACE_COUNT%% Places.</span>
        <button class="friend--remove" friend_id="%%FRIEND_ID%%">X</button>
      </li>
    </div>
  </div>
  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA9eJ1ddUa7R5OV1lXGrJ81j18-BTy0Z5I&libraries=places"></script>
  <script src="/js/jquery-2.2.0.js"></script>
  <script src="/js/bundle.js"></script>
</body>

</html>
